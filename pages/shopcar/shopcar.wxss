/* pages/shopcar/shopcar.wxss */
page
{
  background: #eee;
}

.complies
{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 40rpx;
  border-bottom: 1px solid #eee;
  background-color: #fff;

}

.shopcar_item
{
  display: flex;
  align-items: center;
  height: 200rpx;
  padding: 40rpx;
  background-color: #fff;
}

.product image
{
  height: 180rpx;
  width: 180rpx;
}


.goods_count
{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 200rpx;
}


.goods_count input
{
  width: 40rpx;
  text-align: center;  
}

.shopcar_item_select
{
  height: 100%;
  display: flex;
  align-items: center;
}

.shopcar_item_select icon
{
  padding-right: 40rpx;
}

.product_intro
{
  padding-left: 40rpx;
  width: 100%;
}

.product_title
{
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.product_size
{
  font-size: 26rpx;
  font-size: 200;
  margin-bottom: 20rpx;
}

.product_add
{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.shopcar_all
{
  padding-left: 40rpx;
}
.shopcar_close
{
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.product_num
{
  color: #00da9d;
}

.shopcar_closecar
{
  height: 100%;
  width: 200rpx;
  text-align: center;
  line-height: 140rpx;
  background-color: #00da9d;
  color: #fff;
}

.shopcar_close_right
{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}


.amount_num
{
  color: #00da9d;
}